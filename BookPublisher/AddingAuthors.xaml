<Window x:Class="BookPublisher.AddingAuthors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookPublisher"
        mc:Ignorable="d"
        Title="Новый автор" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="background5.bmp"/>
        </Grid.Background>
        <TextBox Name = "Surname" Margin="471,47,104,324"></TextBox>
        <TextBox Name = "FirstName" Margin="471,144,104,227"></TextBox>
        <TextBox Name = "MiddleName" Margin="471,235,104,136"></TextBox>
        <Button Content="Добавить" Margin="310,329,309,27" Click="Adding" Background="White" FontSize="24"></Button>
        <TextBlock HorizontalAlignment="Left" Margin="114,47,0,0" TextWrapping="Wrap" Text="Фамилия" VerticalAlignment="Top" Height="48" Width="229" FontSize="30" Foreground="Brown"/>
        <TextBlock HorizontalAlignment="Left" Margin="114,144,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Height="48" Width="218" FontSize="30" Foreground="Brown"/>
        <TextBlock HorizontalAlignment="Left" Margin="114,235,0,0" TextWrapping="Wrap" Text="Отчество" VerticalAlignment="Top" Height="48" Width="158" FontSize="30" Foreground="Brown"/>
        <Button Content="Назад" Margin="716,374,10,10" Click="BackWard" Background="White"/>
    </Grid>
</Window>
